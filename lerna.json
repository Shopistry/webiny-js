{
  "packages": [
    "packages/*"
  ],
  "version": "4.1.0-beta.1",
  "command": {
    "version": {
      "preid": "next",
      "ignoreChanges": [
        "scripts/**",
        ",**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md",
        "lerna.json",
        "sample-project/**"
      ],
      "allowBranch": [
        "master",
        "next",
        "develop",
        "release-*"
      ],
      "conventionalCommits": true,
      "createRelease": "github",
      "commitHooks": false,
      "message": "chore(release): publish %s :tada: :rocket:"
    },
    "publish": {
      "conventionalCommits": true
    }
  }
}
